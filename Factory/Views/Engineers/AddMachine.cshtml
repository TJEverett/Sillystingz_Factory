@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h2>Add a Machine</h2>

<h4>Assign @Html.DisplayFor(model => model.NameFirst) @Html.DisplayFor(model => model.NameLast) to maintain a machine?</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.Label("Select a Machine")
  @Html.DropDownList("MachineId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to List of Engineers", "Index")</p>